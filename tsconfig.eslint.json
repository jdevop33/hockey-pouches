{
  "extends": "./tsconfig.json",
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "*.js",
    "*.mjs",
    "scripts/**/*.js",
    "scripts/**/*.ts",
    "scripts/**/*.mjs",
    "instrumentation-client.js",
    "instrumentation.js"
  ],
  "exclude": ["node_modules", ".next"],
  "compilerOptions": {
    "strict": true
  }
}
